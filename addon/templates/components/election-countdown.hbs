{{#if (is-between electionDayStart electionDayEnd)}}

  <div class="election-countdown__left">
    <div class="election-countdown__header election-countdown__header-small">Today is Election Day. NJ polls close at 8 p.m. NY polls close at 9 p.m.</div>
  </div>
  {{#unless promo}}
    <div class="election-countdown__share-voting-issues">
      + {{#link-to 'voter-guide'}}Get the Voting Guide{{/link-to}}
    </div>
  {{/unless}}

{{else if (is-after electionDayEnd)}}

  <div class="election-countdown__left">
    <div class="election-countdown__header">Ready for the Next Election?</div>
  </div>
  {{#unless promo}}
    <div class="election-countdown__share-your-experience">
      + <a href="#">Share Your Experience</a>
    </div>
    <div class="election-countdown__look-up-results">
      + <a href="#">Look Up Results</a>
    </div>
  {{/unless}}

{{else if (is-before electionDayStart)}}

  <div class="election-countdown__left">
    <div class="election-countdown__diff">{{diff}}</div>
    <div class="election-countdown__header">
      {{if (is-before electionDayEveStart) "Days" "Day"}} Until the General Election
    </div>
  </div>

  {{#unless promo}}
    <div class="election-countdown__right">
      <div class="election-countdown__add-to-cal">
        + <a href="{{calendarLink}}" download="Midterm Elections 2018 calendar event">Add to Cal</a>
      </div>
      <div class="election-countdown__get-updates">
        + {{#link-to 'opt-in'}}Get Updates{{/link-to}}
      </div>
    </div>
  {{/unless}}

  {{#if arrow}}
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 6 12">
      <path fill-rule="evenodd" d="M.123 11.833c-.276-.313 0-.588 0-.588l4.73-5.382L.348.735S.112.413.364.127s.603 0 .603 0L6 5.872l-5.317 6.05s-.285.225-.56-.089z"/>
    </svg>
  {{/if}}

{{/if}}
